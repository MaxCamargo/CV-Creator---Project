<div class="card text-center">
  <div class="card-header">
    Descubre, Crea y Comparte en el mundo laboral
  </div>
  <div class="card-body">
    <h1 class="card-title">Plataforma para crear Hojas de Vida<br> profesionales y modernas</h1>
    <a href="#" class="btn btn-primary">Crear HV</a>
  </div>
</div>

<div class="container-fluid">
<div class="row">
  <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
            <%= form_for :newpage do |f| %>
              <div class="form-group">
                <h2 class="text-center">Crea tu Hoja de Vida</h2>
                <br>
                <h4 class="text-center">Datos Personales</h4>
                <br>
                <%= f.label "Nombres:", placeholder: "titulo", for:"formGroupExampleInput" %>
                <%= f.text_field :title, class:"form-control", id:"exampleFormControlInput1" %>
              </div>

              <div class="form-group">
                <%= f.label "Apellidos:", placeholder: "Descripción", for:"exampleFormControlTextarea1" %>
                <%= f.text_field :description, class:"form-control", id:"exampleFormControlTextarea1" %>
              </div>

              <div class="form-group">
                <%= f.label "edad", placeholder: "Foto del Slider", for:"formGroupExampleInput" %>
                <%= f.text_field :images, class:"form-control", id:"exampleFormControlInput1" %>
              </div>

              <div class="form-group">
                <%= f.label "Fecha de nacimiento", placeholder: "Foto del Slider", for:"formGroupExampleInput" %>
                <%= f.date_field :images, class:"form-control", id:"exampleFormControlInput1" %>
              </div>

              <div class="form-group">
                <%= f.label "Acerca de ti / Descripción:", placeholder: "Descripción", for:"exampleFormControlTextarea1" %>
                <%= f.text_area :description, class:"form-control", id:"exampleFormControlTextarea1" %>
              </div>

              
              <div class="form-group">
              <br>
                <h4 class="text-center">Educación</h4>
              <br>
               <%= f.label "Nivel de educación Básica", placeholder: "Selecciona" %>
                  <%= f.select(:ampm, options_for_select([
                  ["Select One", ""], 
                  "Your nick name", 
                  "your schoool name", 
                  "your love name", 
                  "your comapnay name", 
                  "your favourite website"]),
                  {}, {class: "form-control"}) %>
              </div>

              <div class="form-group">
                <%= f.label "Nombre del colegio o intitución:", placeholder: "Descripción", for:"exampleFormControlTextarea1" %>
                <%= f.text_field :description, class:"form-control", id:"exampleFormControlTextarea1" %>
              </div>

              <div class="form-group">
              <%= f.label "Nivel de educación Bachillerato", placeholder: "Selecciona" %>
              <%= f.select(:ampm, options_for_select([
              ["Select One", ""], 
              "Your nick name", 
              "your schoool name", 
              "your love name", 
              "your comapnay name", 
              "your favourite website"]),
              {}, {class: "form-control"}) %>
              </div>

              <div class="form-group">
                <%= f.label "Nombre del colegio o intitución:", placeholder: "Descripción", for:"exampleFormControlTextarea1" %>
                <%= f.text_field :description, class:"form-control", id:"exampleFormControlTextarea1" %>
              </div>


              <div class="form-group">
              <%= f.label "Nivel de educación Superior", placeholder: "Selecciona" %>
              <%= f.select :secretquestion, options_for_select([
              ["Select One", ""], 
              "Your nick name", 
              "your schoool name", 
              "your love name", 
              "your comapnay name", 
              "your favourite website"]), 
              {}, { class: "form form-group form-control" } %>
              </div>


              <%= f.submit class:"btn btn-primary", type:"submit" %>
              </div>
            <% end %>
        </div>
      </div>
  </div>
</div>
